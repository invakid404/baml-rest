{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>invakid404/renovate-config"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^integration/baml_versions\\.json$/"
      ],
      "matchStrings": [
        "\"latest\":\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "@boundaryml/baml",
      "datasourceTemplate": "npm"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^go\\.work$/"
      ],
      "matchStrings": [
        "(?m)^go (?<currentValue>\\S+)"
      ],
      "depNameTemplate": "go",
      "datasourceTemplate": "golang-version",
      "versioningTemplate": "loose"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^integration/baml_versions\\.json$/"
      ],
      "matchStrings": [
        "\"source\":\\s*\"(?<currentDigest>[a-f0-9]{40})\""
      ],
      "depNameTemplate": "BoundaryML/baml",
      "datasourceTemplate": "git-refs",
      "packageNameTemplate": "https://github.com/BoundaryML/baml",
      "currentValueTemplate": "canary"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/Dockerfile\\.tmpl$/",
        "/^Dockerfile\\.builder$/",
        "/^\\.github/workflows/.*\\.yml$/"
      ],
      "matchStrings": [
        "GO_VERSION[=:]\\s*['\"]?(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "go",
      "datasourceTemplate": "golang-version",
      "versioningTemplate": "loose"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "golang-version"
      ],
      "rangeStrategy": "bump",
      "groupName": "golang",
      "extractVersion": "^go(?<version>.*)$"
    },
    {
      "matchPackageNames": [
        "github.com/boundaryml/baml"
      ],
      "matchFileNames": [
        "adapters/**/go.mod"
      ],
      "enabled": false
    }
  ]
}
