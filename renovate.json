{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>invakid404/renovate-config"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^integration/baml_versions\\.json$"],
      "matchStrings": ["\"latest\":\\s*\"(?<currentValue>[^\"]+)\""],
      "depNameTemplate": "@boundaryml/baml",
      "datasourceTemplate": "npm"
    },
    {
      "customType": "regex",
      "fileMatch": ["^go\\.work$"],
      "matchStrings": ["(?m)^go (?<currentValue>\\S+)"],
      "depNameTemplate": "go",
      "datasourceTemplate": "golang-version",
      "versioningTemplate": "loose"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["golang-version"],
      "rangeStrategy": "bump",
      "groupName": "golang",
      "extractVersion": "^go(?<version>.*)$"
    },
    {
      "matchPackageNames": ["github.com/boundaryml/baml"],
      "matchFileNames": ["adapters/**/go.mod"],
      "enabled": false
    }
  ]
}
